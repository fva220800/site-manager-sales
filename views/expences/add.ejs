<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <div class="container-xxl">
      <main>
        <h1 class="mt-3">Добавление расхода</h1>
        <form action="/expences/add" method="post">
          <div class="col-xl-6 mt-3">
            <label for="work_id" class="form-label">Вид работы</label>
            <input
              type="text"
              class="form-control"
              id="work_id"
              required
              name="work_id"
            />
          </div>
          <div class="col-xl-6 mt-3">
            <label for="price" class="form-label">Сумма</label>
            <input
              type="text"
              class="form-control"
              id="price"
              required
              name="price"
            />
          </div>

          <div class="col-xl-6 mt-3">
            <label for="pay" class="form-label"
              >Метод оплаты</label
            >
            <input
              type="text"
              class="form-control"
              id="pay"
              required
              name="pay"
            />
          </div>

          <div class="mt-3">
            <button class="btn btn-primary button" type="button" id="btn">
              Добавить
            </button>
            <button class="hidden" type="submit">Добавить</button>
            <a href="/expences" class="btn btn-primary">Назад</a>
          </div>
        </form>
      </main>
    </div>
    <%- include('../partials/scripts.ejs') %>
  </body>
</html>
