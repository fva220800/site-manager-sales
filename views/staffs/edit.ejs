<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <div class="container-xxl">
      <main>
        <h1 class="mt-3">Редактирование фирмы</h1>
        <form
          action="/staffs/edit/<%= staff.id %>?_method=PUT"
          method="post"
        >
        <div class="col-xl-6 mt-3">
          <label for="firm_id" class="form-label">Фирма</label>
          <input
            type="text"
            class="form-control"
            id="firm_id"
            required
            name="firm_id"
            value="<%= staff.firm_id %>"
          />
        </div>
        <div class="col-xl-6 mt-3">
          <label for="surname" class="form-label">Фамилия</label>
          <input
            type="text"
            class="form-control"
            id="surname"
            required
            name="surname"
            value="<%= staff.surname %>"
          />
        </div>

        <div class="col-xl-6 mt-3">
          <label for="firstname" class="form-label"
            >Имя</label
          >
          <input
            type="text"
            class="form-control"
            id="firstname"
            required
            name="firstname"
            value="<%= staff.firstname %>"
          />
        </div>

        <div class="col-xl-6 mt-3">
          <label for="patronymic" class="form-label"
            >Отчество</label
          >
          <input
            type="text"
            class="form-control"
            id="patronymic"
            required
            name="patronymic"
            value="<%= staff.patronymic %>"
          />
        </div>

        <div class="col-xl-6 mt-3">
          <label for="position" class="form-label"
            >Должность</label
          >
          <input
            type="text"
            class="form-control"
            id="position"
            required
            name="position"
            value="<%= staff.position %>"
          />
        </div>

        <div class="col-xl-6 mt-3">
          <label for="work_id" class="form-label"
            >Вид работы</label
          >
          <input
            type="text"
            class="form-control"
            id="work_id"
            required
            name="work_id"
            value="<%= staff.work_id %>"
          />
        </div>

        <div class="col-xl-6 mt-3">
          <label for="earn" class="form-label"
            >Зарплата</label
          >
          <input
            type="text"
            class="form-control"
            id="earn"
            required
            name="earn"
            value="<%= staff.earn %>"
          />
        </div>

        <div class="col-xl-6 mt-3">
          <label for="address" class="form-label"
            >Адрес</label
          >
          <input
            type="text"
            class="form-control"
            id="address"
            required
            name="address"
            value="<%= staff.address %>"
          />
        </div>

        <div class="col-xl-6 mt-3">
          <label for="phone" class="form-label"
            >Телефон</label
          >
          <input
            type="text"
            class="form-control"
            id="phone"
            required
            name="phone"
            value="<%= staff.phone %>"
          />
        </div>

          <div class="mt-3">
            <button class="btn btn-primary button" type="button" id="btn">
              Изменить
            </button>
            <button class="hidden" type="submit">Добавить</button>
            <a href="/firms" class="btn btn-primary">Назад</a>
          </div>
        </form>
      </main>
    </div>
    <%- include('../partials/scripts.ejs') %>
  </body>
</html>
